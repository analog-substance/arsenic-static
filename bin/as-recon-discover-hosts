#! /bin/bash

if [[ -z "$NMAP" ]]; then
  NMAP="nmap"
fi

local_ips=$(ip a | grep -Eo 'inet[^6]\S+[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}' | awk '{print $2}' | grep -E "^10\.|^172\.|^192\.168\.|^169\.254\.")

targets="$1"
if [[ -z "$targets" ]]; then
  targets=$(echo $(echo "$local_ips" | sed 's/$/\/24/g') | sed 's/\s/,/g')
fi

$NMAP -sP -n "$targets" -oG - | grep "Status: Up" | awk '{print $2}' | grep -vP "$(echo $local_ips | sed 's/\s/\|/g;s/\./\\./g')"
